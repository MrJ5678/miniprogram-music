/* components/ranking-area-item/index.wxss */
.item {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: rgb(231, 230, 230);
  border-radius: 12rpx;
  overflow: hidden;
}

.item .left {
  padding: 20rpx;
}

.item .left .song-list {
  margin-top: 10rpx;
}

.item .left .song-list .song {
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 1;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}

.item .left .song-list .song .line,
.item .left .song-list .song .artist {
  color: gray;
} 

.item .right {
  position: relative;
}

.item .right .image {
  display: inline-block;
  vertical-align: top;
  width: 200rpx;
  height: 100%;
}

.item .right .play-count {
  position: absolute;
  bottom: 0;
  right: 0;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, .3);
}