/* components/song-menu-item/index.wxss */
.item {
  display: inline-block;
  width: 100%;
}

.item .top {
  position: relative;
  overflow: hidden;
  z-index: 2;
}

.top .play-counter {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  padding: 6rpx 10rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 12rpx;
  z-index: 1;
}

.top .image {
  width: 100%;
  border-radius: 20rpx;
  background-size: cover;
}

.item .bottom {
  width: 100%;
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}